# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# AWS Configuration (REQUIRED)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=screen-capture-tool-dev

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
CORS_ORIGINS=http://localhost:3000,chrome-extension://*,moz-extension://*

# Upload Settings
MAX_FILE_SIZE=104857600
PRESIGNED_URL_EXPIRATION=3600
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/webp,video/webm,video/mp4

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (Optional - for future)
DATABASE_URL=postgresql://localhost:5432/screen_capture_db
