# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database_name
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production-change-this-immediately
JWT_EXPIRES_IN=24h

# AWS S3 Configuration (Production)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=screen-capture-tool-prod

# API Configuration
API_BASE_URL=https://api.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,chrome-extension://,moz-extension://

# File Upload Configuration
MAX_FILE_SIZE=104857600
MAX_REQUEST_SIZE=50mb
UPLOAD_TIMEOUT=600000
PRESIGNED_URL_EXPIRATION=3600
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/webp,image/gif,video/webm,video/mp4,video/quicktime

# Security Configuration
BCRYPT_ROUNDS=12
HELMET_CSP_ENABLED=true
TRUST_PROXY=1

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=20

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_MORGAN=true
ENABLE_AUDIT_LOG=true
ENABLE_REQUEST_LOGGING=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Redis Configuration (for sessions/cache)
REDIS_URL=redis://redis-host:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# AWS CloudWatch (optional)
CLOUDWATCH_LOG_GROUP=/aws/lambda/screen-capture-api
CLOUDWATCH_LOG_STREAM=production
ENABLE_CLOUDWATCH=false

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
KEEP_ALIVE_TIMEOUT=5000

# S3 Advanced Configuration
S3_MULTIPART_THRESHOLD=5242880
S3_MULTIPART_PART_SIZE=5242880
S3_MAX_CONCURRENT_UPLOADS=3
S3_RETRY_ATTEMPTS=3
S3_RETRY_DELAY=1000

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=screen-capture-backups-prod

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.com.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.com.key
FORCE_HTTPS=true

# Error Reporting (optional - Sentry, Rollbar, etc.)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_ERROR_REPORTING=false

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
ENABLE_ANALYTICS=false

# Feature Flags
ENABLE_FILE_VERSIONING=true
ENABLE_FILE_COMPRESSION=false
ENABLE_BULK_OPERATIONS=true
ENABLE_STORAGE_ANALYTICS=true
ENABLE_COST_OPTIMIZATION=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100
ENABLE_RESPONSE_CACHE=true

# File Processing
ENABLE_THUMBNAIL_GENERATION=false
THUMBNAIL_SIZES=150x150,300x300
IMAGE_QUALITY=85
VIDEO_COMPRESSION=medium

# Cleanup Configuration
TEMP_FILE_TTL=3600
FAILED_UPLOAD_TTL=86400
ORPHANED_FILE_CLEANUP_INTERVAL=daily

# API Documentation
ENABLE_SWAGGER=false
SWAGGER_UI_PATH=/docs

# Webhook Configuration (optional)
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_ENDPOINTS=https://your-app.com/webhooks/upload,https://analytics.com/events

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Custom Domain Configuration
CUSTOM_DOMAIN=files.yourdomain.com
CDN_URL=https://cdn.yourdomain.com

# Audit and Compliance
ENABLE_AUDIT_TRAIL=true
DATA_RETENTION_DAYS=2555
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false

# Development/Debug (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false